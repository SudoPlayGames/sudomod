<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sudoplay.sudoxt.ext.classloader" level="DEBUG"/>
    <logger name="mod" level="TRACE"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>