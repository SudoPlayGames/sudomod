<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sudoplay.sudomod.mod.classloader" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>